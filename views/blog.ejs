<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="public/css/styles.css">
    <title>Blog</title>
  </head>
  <body class="bg-gray-100 mt-10">

    <div class="grid grid-cols-1 mx-64 text-center gap-6">
      <% posts.forEach( function(row) { %>

        <a class="" href="<%= row.link %>">
          <div class="py-5 bg-gray-300 rounded-lg shadow-lg"><%= row.title %></div>
        </a>

      <% }) %>
    </div>

  </body>
</html>
